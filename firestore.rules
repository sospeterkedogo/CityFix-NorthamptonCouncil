rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Match the tickets collection
    match /tickets/{ticketId} {
      // Allow read for everyone (or restrict to authenticated if needed)
      allow read: if true; 

      // Allow creating tickets if authenticated
      allow create: if isAuthenticated();

      // Allow updating tickets
      // 1. If user is the owner (e.g. editing their own post)
      // 2. OR IF the update is ONLY changing specific counters (voteCount, upvoteCount, commentCount)
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['voteCount', 'upvoteCount', 'commentCount', 'updatedAt']))
      );

      // Subcollections (comments, likes, upvotes)
      match /likes/{userId} {
        allow read: if true;
        allow write: if isAuthenticated() && isOwner(userId);
      }
      
      match /upvotes/{userId} {
        allow read: if true;
        allow write: if isAuthenticated() && isOwner(userId);
      }

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated(); // Check userId in data if needed, but basic auth is usually enough for comments
        allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && isOwner(userId);
      
      // Allow user to read/write their own notifications
      match /notifications/{notificationId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
  }
}
